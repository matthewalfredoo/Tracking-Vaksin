@model ServiceBPOM.DataPasien

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
     ViewData["Title"] = "Pemakaian Vaksin";
}

<h3>Pemakaian Vaksin</h3>
@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
        ViewBag.Message = null;
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="PemakaianVaksin">
            <div class="form-group mb-2">
                <label asp-for="nik" class="control-label">Nomor Induk Kependudukan</label>
                <input asp-for="nik" class="form-control" required/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="id_vaksin" class="control-label">Jenis Vaksin</label>
                <select asp-for="id_vaksin" class="form-select" aria-label="Default select example" required>
                    <option selected value="" disabled>Pilih Jenis Vaksin</option>
                    <option value="1">vaksin 1</option>
                    <option value="2">vaksin 2</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>
