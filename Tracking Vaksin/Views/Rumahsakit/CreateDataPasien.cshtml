@model ServiceBPOM.DataPasien

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
     ViewData["Title"] = "Create Data Pasien";
}

<h3>Tambah Data Pasien Baru</h3>
@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
        ViewBag.Message = null;
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDataPasien">
            <div class="form-group mb-2">
                <label asp-for="nik" class="control-label">Nomor Induk Kependudukan</label>
                <input asp-for="nik" class="form-control required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Tambah" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>