@model Tracking_Vaksin_Services.DataPendudukS

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
     ViewData["Title"] = "Registrasi Vaksin";
}

<h3>Tambah Data Penduduk</h3>
@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
        ViewBag.Message = null;
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePenduduk">
            <div class="form-group mb-2">
                <label asp-for="nik" class="control-label">NIK</label>
                <input asp-for="nik" class="form-control" required/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="nama" class="control-label">Nama</label>
                <input asp-for="nama" class="form-control" required/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="alamat" class="control-label">Alamat</label>
                <input asp-for="alamat" class="form-control required/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="jenis_kelamin" class="control-label">Jenis Kelamin</label>
                <select asp-for="jenis_kelamin" class="form-control form-select">
                    <option selected disabled>- Pilih -</option>
                    <option value="Pria">Pria</option>
                    <option value="Wanita">Wanita</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrasi" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>